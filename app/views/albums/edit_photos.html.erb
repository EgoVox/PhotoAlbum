<h1>Edit Photos in <%= @album.name %></h1>

<%= form_with url: delete_photos_album_path(@album), method: :delete do %>
  <div class="photos-grid">
    <% @photos.each do |photo| %>
      <div class="photo-thumbnail">
        <%= check_box_tag 'photo_ids[]', photo.id %>
        <%= image_tag photo.image, class: 'album-photo' %>
      </div>
    <% end %>
  </div>

  <%= submit_tag 'Delete Selected Photos', data: { confirm: 'Are you sure you want to delete the selected photos?' } %>
<% end %>

<%= link_to 'Back to Album', album_path(@album) %>
