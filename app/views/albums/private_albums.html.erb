<h1>Albums Privés</h1>

<%= form_with url: unlock_private_albums_albums_path, method: :post, remote: true do %>
  <div class="field">
    <%= label_tag :password, "Mot de Passe" %>
    <%= password_field_tag :password %>
  </div>

  <div class="actions">
    <%= submit_tag "Afficher les Albums Privés" %>
  </div>
<% end %>
